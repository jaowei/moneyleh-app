{
    "name": "moneyleh-app",
    "type": "module",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "start": "bun run src/index.ts",
        "generate:better-auth": "bunx --bun @better-auth/cli generate --output src/db/auth-schema.ts",
        "migrate:better-auth": "bunx --bun @better-auth/cli migrate",
        "generate:migrations": "bun drizzle-kit generate",
        "migrate:db": "bun run ./src/db/migrate.ts",
        "seed:db": "bun run ./src/db/seed.ts"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.7.4",
        "better-auth": "^1.3.34",
        "dayjs": "^1.11.19",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.10.4",
        "lefthook": "^2.0.2",
        "mupdf": "^1.26.4",
        "natural": "^8.1.0",
        "resend": "^4.8.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "drizzle-kit": "^0.31.6"
    }
}