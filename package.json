{
    "name": "moneyleh-app",
    "type": "module",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "dev:fe": "cd src/frontend && bun run dev",
        "start": "bun run src/index.ts",
        "generate:better-auth": "bunx --bun @better-auth/cli generate --output src/db/auth-schema.ts",
        "migrate:better-auth": "bunx --bun @better-auth/cli migrate",
        "generate:migrations": "bun drizzle-kit generate",
        "migrate:db": "bun run ./src/db/migrate.ts",
        "seed:db": "bun run ./src/db/seed.ts",
        "build:fe-dev": "cd src/frontend && bun run build:dev"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.7.6",
        "better-auth": "^1.4.18",
        "csv-parse": "^6.1.0",
        "dayjs": "^1.11.19",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.11.9",
        "lefthook": "^2.1.1",
        "mupdf": "^1.27.0",
        "natural": "^8.1.0",
        "resend": "^4.8.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "drizzle-kit": "^0.31.9"
    }
}